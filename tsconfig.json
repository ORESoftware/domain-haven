{
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "allowJs": false,
    "target": "es2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2019",
      "es2020",
      "es2021"
    ]
  },
  "allowJs": true,
  "compileOnSave": false,
  "include": [
    "src"
  ]
}
